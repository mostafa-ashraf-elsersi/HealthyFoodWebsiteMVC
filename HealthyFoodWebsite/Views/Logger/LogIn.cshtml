
@model LoggerCredentialsParameters

<!-- Password-Changing Alert -->
@if (ViewBag.PasswordChanged == 1)
{
    <div id="password-changing-alert" class="alert alert-dismissible fixed-bottom bg-primary" style="margin-left: 10px; max-width: 300px; z-index: 100;">
        <button type="button" class="btn-close" onclick="closePasswordChangingAlert()"></button>
        <span style="color: white; text-align: justify;">Password reset successfully!</span>
    </div>
}
else if (ViewBag.PasswordChanged == 0)
{
    <div id="password-changing-alert" class="alert alert-dismissible fixed-bottom bg-secondary" style="margin-left: 10px; max-width: 300px; z-index: 100;">
        <button type="button" class="btn-close" onclick="closePasswordChangingAlert()"></button>
        <span style="color: white; text-align: justify;">Error occurred! Try again!</span>
    </div>
}
<!-- Password-Changing Alert -->

<!-- Registration Alert -->
@if (ViewBag.AccountRegistered == 1)
{
    <div id="registration-alert" class="alert alert-dismissible fixed-bottom bg-primary" style="margin-left: 10px; max-width: 300px; z-index: 100;">
        <button type="button" class="btn-close" onclick="closeRegistrationAlert()"></button>
        <span style="color: white; text-align: justify;">Successful registration!</span>
    </div>
}
<!-- Registration Alert -->

<!-- Page Header Start -->
<div class="container-fluid page-header wow fadeIn" data-wow-delay="0.1s">
    <div class="container d-none d-md-block">
        <h1 class="display-3 mb-3 animated slideInDown">Get Connected</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" asp-controller="Home" asp-action="GetView">Home</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Log In</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Login Form Start -->
<div class="container-fluid bg-light bg-icon py-6">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <div class="text-start">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mt-2 mb-4">Login Form</h5>
                        <form asp-action="AuthenticateLogger">
                            <div class="mb-4 text-center">
                                <h5>Select Credentials As:</h5>
                            </div>
                            <div class="d-flex justify-content-evenly mb-4">
                                <button type="button" class="btn btn-primary" onclick="setCredentials('BusinessOwner')">Owner</button>
                                <button type="button" class="btn btn-secondary" onclick="setCredentials('Admin')">Admin</button>
                                <button type="button" class="btn btn-info text-white" onclick="setCredentials('User')">User</button>
                            </div>
                            <div class="mb-4 text-center">
                                <h5>Or Login With Your Credentials:</h5>
                            </div>
                            <div class="form-floating mb-4">
                                <input asp-for=Username class="form-control" placeholder="">
                                <label asp-for=Username>Username</label>
                            </div>
                            <div class="form-floating mb-3 text-start">
                                <input asp-for=Password class="form-control" placeholder="">
                                <label asp-for=Password>Password</label>
                                <a asp-action="PasswordForgettingIdentityConfirmationPortal">Forgot Your Password?</a>
                            </div>
                            @if (!(ViewBag.PasswordChanged == 1 || ViewBag.PasswordChanged == 0))
                            {
                                <div asp-validation-summary="All" class="text-danger mb-3"></div>                                
                            }
                            <div class="d-flex justify-content-evenly mb-4">
                                <button type="submit" class="btn btn-primary">Log in</button>
                                <button type="reset" class="btn btn-secondary">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login Form End -->

@section Scripts {
    <script>
        function closePasswordChangingAlert() {
            let alertDiv = document.getElementById("password-changing-alert");
            alertDiv.classList.add(["d-none"]);
        }

        function closeRegistrationAlert() {
            let alertDiv = document.getElementById("registration-alert");
            alertDiv.classList.add(["d-none"]);
        }

        function setCredentials(role) {
            let usernameField = document.getElementById("Username");
            let passwordField = document.getElementById("Password");

            if (role === "BusinessOwner") {
                usernameField.value = "ashraf_elsersi";
                passwordField.value = "#Ashraf258";
            }
            else if (role === "Admin") {
                usernameField.value = "mohammad_ashraf";
                passwordField.value = "#Mohammad258";
            }
            else if (role === "User") {
                usernameField.value = "mostafa_ashraf";
                passwordField.value = "#Mostafa258";
            }
        }
    </script>
}